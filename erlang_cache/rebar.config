{erl_opts, [debug_info]}.

{plugins, [
  {rebar3_elixir_compile, {git, "https://github.com/barrel-db/rebar3_elixir_compile.git", {branch, "master"}}}
]}.

{deps, [
  {nebulex, {elixir, "nebulex" ,"2.0.0-rc.0"}},
  {shards, "0.6.2"}
]}.

{provider_hooks, [
  {pre, [{compile, {ex, compile}}]}
]}.

{elixir_opts, [
  {env, dev}
]}.

{shell, [{apps, [erlang_cache]}]}.
